<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_Rfollower_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretendard_semibold"
        android:text="name"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_Rfollower_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretendard_regular"
        android:text="email"
        app:layout_constraintEnd_toEndOf="@+id/tv_Rfollower_name"
        app:layout_constraintStart_toStartOf="@+id/tv_Rfollower_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_Rfollower_name" />

    <ImageView
        android:id="@+id/iv_Rfollower_profile"
        android:layout_width="100dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1"
        android:contentDescription="profileImage"
        android:src="@drawable/github"
        app:layout_constraintEnd_toEndOf="@id/tv_Rfollower_email"
        app:layout_constraintStart_toStartOf="@id/tv_Rfollower_email"
        app:layout_constraintTop_toBottomOf="@id/tv_Rfollower_email" />


</androidx.constraintlayout.widget.ConstraintLayout>